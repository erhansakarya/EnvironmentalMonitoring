/* Define to prevent recursive inclusion -------------------------------------*/
#ifndef __ENVMONITOR_H
#define __ENVMONITOR_H

#ifdef __cplusplus
extern "C" {
#endif

/* Includes ------------------------------------------------------------------*/
#include "stm32f1xx_hal.h"

typedef struct{
	int8_t temperature;
	uint8_t humidity;
}htu21d_s;

typedef struct{
	uint8_t lux;
}tsl2561_s;

typedef struct{
	htu21d_s htu21d;
	tsl2561_s tsl2561;
}sensor_s;

typedef struct{
	sensor_s sensor;
}envmonitor_s;

extern envmonitor_s envmonitor;

#define INIT_ENVMONITOR {	\
						0,	\
						0,	\
						0,	\
						}	\

uint8_t ENVMNTR_init(void);
uint8_t ENVMNTR_createTasks(void);

#endif
